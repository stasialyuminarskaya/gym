<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".step4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_backblue"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/advent_pro"
        android:text="Step 4/5"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/advent_pro"
        android:text="How often do you exercise?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button10"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/advent_pro"
        android:text="Newbie\nJust getting started"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button11"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/layout_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/advent_pro"
        android:text="Keep on\n1-2 times a week"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button12"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/layout_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/advent_pro"
        android:text="Advanced\nMore than 3 times a week"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:background="@drawable/layout_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/advent_pro"
        android:layout_marginTop="60dp"
        android:text="Next"
        android:onClick="GoToStepFive"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

</androidx.constraintlayout.widget.ConstraintLayout>